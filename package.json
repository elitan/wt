{
  "name": "wt",
  "version": "0.0.1",
  "description": "Git worktree manager for feature branches",
  "author": "Johan Eliasson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elitan/wt"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "branches"
  ],
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "wt": "src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --define 'process.env.VERSION=\"dev\"' --outfile wt-dev src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
